<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity6">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="370dp"
        android:layout_height="74dp"
        android:gravity="center"
        android:text="[좋아하는 계절을 선택하시오]"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup_seasons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.721" />


    <RadioGroup
        android:id="@+id/radioGroup_seasons"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginTop="340dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/radioBtnSpring"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="봄" />

        <RadioButton
            android:id="@+id/radioBtnSummer"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="여름" />

        <RadioButton
            android:id="@+id/radioBtnFall"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="가을" />

        <RadioButton
            android:id="@+id/radioBtnWinter"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="겨울" />
    </RadioGroup>

    <TextView
        android:id="@+id/select_season"
        android:layout_width="370dp"
        android:layout_height="74dp"
        android:gravity="center"
        android:text="선택한 계절"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#238fe4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup_seasons"
        app:layout_constraintVertical_bias="0.149" />

</androidx.constraintlayout.widget.ConstraintLayout>